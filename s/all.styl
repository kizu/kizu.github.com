@import 'font_regular'
@import '../stylobate/stylus/stylobate'

// rem! as we can't redefine it in Stylus, we can use the var for it.
//   Can be used as `2*rem` — almost like normal units, but with asteriks.
//   Also, it would fallback to pixels in IE automagically.
rem_px = 18px
rem = 1rem
rem = rem_px if ie

$dark = #25220E

$body_bg = #FBFAF4
$body_text = rgba($dark,.92)
$body_link = #0985CE
$body_link_visited = #8C64B4

$distant_bg = blend(rgba($dark,.05),$body_bg)

$header_size = 6*rem
$footer_size = 6*rem

// Layout etc.
html
  padding: 0
  margin: 0
  overflow-y: scroll

  text-align: center

  font-size: 1*rem_px
  color: $body_text
  text-shadow: 0 1px #FFF

  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%
  text-rendering: optimizelegibility
  -webkit-font-smoothing: subpixel-antialiased

  background: $body_bg

.page_post
  background: $distant_bg

body
  position: relative
  z-index: 1

  min-width: 22*rem
  font: 23px/2*rem 'Cent-Regular21', Georgia, serif
  padding: $header_size 0 $footer_size
  margin: 0

body:before,
body:after
  content: ""
  display: table
  clear: both


.main
  position: relative
  z-index: 9

  padding: 1*rem 0.5*rem 0 1*rem
  padding: 1*rem 2.5vw 0 5vw

  background: $body_bg

  .page_post &
    padding-top: 2.5*rem
    padding-bottom: 2*rem
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.9), 0 0 0 1px rgba($dark,0.05), 0 0 40px -5px rgba($dark,0.3)

  // Setting all those things in a list so we could intrude there.
  & > header,
  & > h1,
  & > h2,
  & > h3,
  & > h4,
  & > h5,
  & > h6,
  & > p,
  & > ul,
  & > ol,
  & > pre,
  & > dl,
  & > .demo_seamless,
  & > .feedback{", h1.title, .page:not(.page_post) .footer > .copy"}
    width: 42*rem
    max-width: 100%
    margin-left: auto
    margin-right: auto

    text-align: left

  & > table
    display: inline-block

.main header h1
  padding-bottom: 2.5*rem

.header
  position: absolute
  top: 0
  right: 0
  left: 0

  overflow: hidden

  height: $header_size
  padding: 0 0.5*rem 0 1*rem
  padding: 0 2.5vw 0 5vw

  white-space: nowrap

  .page_post &
    position: fixed
    background: $distant_bg


.title
  padding-top: 1.5*rem
  text-indent: -0.3*rem

.title A:not(:hover)
  color: rgba($dark,.48)


.footer
  position: absolute
  right: 0
  bottom: 0
  left: 0

  overflow: hidden

  height: $footer_size

  .page_post &
    position: fixed
    background: $distant_bg

.footer .prevnext
  position: absolute
  right: 0
  bottom: 0
  left: 0

  overflow: hidden

  font-size: 1*rem

.footer .link_prev,
.footer .link_next
  padding-right: 1*rem
  padding-left: 1*rem

.footer .link_prev
  float: left

  &:before
    content: "← "

.footer .link_next
  float: right

  &:after
    content: " →"

.date
  position: absolute
  top: 0
  right: 0

  padding: 0.5*rem 1.3*rem

  font-size: 1*rem

  transform: rotate(90deg) translate(100%,0)
  transform-origin: 100% 0


  color: rgba($dark, 0.3)


.breadcrumbs
  left: -1.4*rem
  right: auto

  & > A:first-child:before
    content: "↑"

    display: inline-block

    padding-left: 0.5*rem
    padding-right: 0.5*rem

    margin: -.6em 0 0 -0.5*rem

    vertical-align: middle

    font: .9em/1 Arial, sans-serif

  & > A:not(:hover)
    color: rgba($dark,.48)

.published
  font-size: 1*rem

// Links
A
  padding: .3em 0 .287em

  cursor: pointer

  color: $body_link
  text-decoration: none

.main A:visited:not(:hover),
.prevnext > .link:visited:not(:hover)
  color: $body_link_visited

A:hover
  color: $body_link

  text-shadow: -1px 0 $body_bg, 1px 0 $body_bg, -2px -1px $body_bg, 2px -1px $body_bg,
                0 -1px $body_bg, 0 -2px $body_bg, 0 -3px $body_bg, 0 -4px $body_bg, 0 -5px $body_bg, 0 -6px $body_bg

  background: linear-gradient($body_link, $body_link 1px, rgba(255,255,255,0.9) 1px, rgba(255,255,255,0.9) 2px, transparent 2px) repeat-x
  background-size: 1px .44em
  // background-position: -9px 1.08em
  background-position: -9px 100%

  .title &
    background-image: linear-gradient($body_link, $body_link 2px, rgba(255,255,255,.9) 2px, rgba(255,255,255,.9) 3px, transparent 3px)
    background-size: 1px .47em
    text-shadow: 0 1px rgba(255,255,255,.9), -2px 0 $distant_bg, 2px 0 $distant_bg

  .header &,
  .footer &
    background-size: 1px .45em

    .page_post &
      text-shadow: -1px 0 $distant_bg, 1px 0 $distant_bg, -2px -1px $distant_bg, 2px -1px $distant_bg,
                    0 -1px $distant_bg, 0 -2px $distant_bg, 0 -3px $distant_bg, 0 -4px $distant_bg, 0 -5px $distant_bg, 0 -6px $distant_bg, 0 -7px $distant_bg

  .feedback > &,
  .published > &,
  .nav > &
    background-size: 1px .47em

.gap_narrow
  text-shadow: -1px 0 $body_bg, 1px 0 $body_bg, -2px 0 $body_bg, 2px 0 $body_bg, -3px 0 $body_bg, 3px 0 $body_bg

::selection
  text-shadow: none !important
  background: #B1D2FB


// Awfully useful wrapper link (also, all pseudo-links are made as wrappers)
.link_wrapper
  white-space: nowrap // Would be a class for multiline links

.link_wrapper .ico
  margin-top: -4px

  vertical-align: middle

.link_wrapper:hover
  background-repeat: no-repeat


.link_wrapper:hover .link__inner
  padding-top: inherit
  padding-bottom: inherit
  background: inherit
  background-repeat: repeat-x

// Pseudo-link (can be only in wrapper)
.link_pseudo,
.link_pseudo.link_wrapper .link__inner
  text-decoration: none
  border-bottom: 1px dotted

.link_pseudo.link_wrapper
  border-bottom: 0

// Quoted link (need to be in wrapper)
.link_quoted:before
  content: "“"

  .page_ru &
    content: "«"

.link_quoted:after
  content: "”"

  .page_ru &
    content: "»"

// Text-like link
.link_text
  color: inherit


// Copyrights block
.copy
  padding-top: 1*rem
  margin-bottom: 0

  font-size: 1*rem
  color: rgba($dark,.62)

.page:not(.page_post) .footer > .copy
  padding: 1*rem 0.5*rem 0 1*rem
  padding: 1*rem 2.5vw 0 5vw

.feedback
  padding: 2.25*rem 0 0.25*rem

  font-size: 1*rem
  line-height: 1.5*rem

  color: rgba($dark,.62)

  box-shadow: 0 -1px 0 rgba($dark, 0.15), inset 0 1px 0 rgba(#FFF, 0.9)

.nav
  padding: 0
  margin: -1.5*rem 0 2*rem

  font-size: 1*rem
  line-height: 1.5*rem

  color: rgba($dark,.62)

// Typography
P,
UL,
OL,
DL,
BLOCKQUOTE,
HR,
CODE,
PRE,
TABLE
  padding: 0
  margin: 0 0 2*rem

LI,
LI > P
  padding: 0
  margin: 0 0 su

h1,
H2,
H3,
H4,
H5,
H6
  padding: 0
  margin: 0

  line-height: 1
  font-weight: normal
  word-wrap: break-word

H1
  position: relative
  font-size: 3.5*rem
  padding-top: 1*rem
  margin-left: -0.3*rem

H2
  position: relative
  font-size: 2.5*rem
  padding-bottom: 1*rem

H3
  font-size: 2*rem
  padding-top: 1*rem
  padding-bottom: 1*rem

H4,
H5,
H6
  font-size: 1*rem
  padding-bottom: 1*rem

OL
  counter-reset: list

LI
  list-style-type: none

  & LI
    padding-left: 1.5*rem

LI:before
  content: "— "
  position: absolute
  display: inline-block
  width: 1.5*rem
  margin-left: -1.5*rem
  text-align: right

OL > LI
  counter-increment: list

OL > LI:before
  content: counter(list) ". "


// We could do this, but it don't recalculate on window resize -_-
// @media (max-width: 882px)
//   H1
//     font-size: 7.6vw

@media (max-width: 550px)
  body
    line-height: 1.75*rem

  // On iphones that bugs a lot
  .page .header,
  .page .footer
    position: absolute

  .page .footer
    text-align: left
    padding: 0 0.5*rem 0 1*rem
    padding: 0 2.5vw 0 5vw

  .footer .link_twitter
    display: none

  .footer .copy
    padding-top: 0.5*rem

  .footer .link_prev,
  .footer .link_next
    float: none
    display: block
    padding-left: 5vw !important
    padding-right: 0

  .footer .link_next
    padding-top: 0

  .main
    padding-top: 1.25*rem

  H1.title
    font-size: 2.5*rem
    padding-top: 2*rem
    text-indent: -0.15*rem

  H1
    font-size: 1.75*rem
    margin-left: -0.15*rem
  .main header H1
    padding-bottom: 1.5*rem
  H2
    font-size: 1.5*rem
  H3
    font-size: 1.25*rem

  LI:before
    word-spacing: -2px
    text-align: left

  LI
    padding-left: 1.5*rem

code,
pre,
kbd
  font-family: Monaco, Consolas, monospace
  font-size: 0.87em

pre
  overflow: hidden
  overflow-x: auto

sup,
sub
  position: relative
  vertical-align: baseline
  font-size: .8em
  line-height: 1
sup
  bottom: 1.4ex
sub
  top: .5ex

h1 > sup
  font-size: 1*rem

  bottom: 1.7*rem
  left: -0.5*rem

  & > .link
    padding: 1em
    margin: -1em
    text-shadow: none !important

.figure
  padding: .3em !important
  margin: 0 0.5*rem 0 -0.3em
  margin: 0 2.5vw 0 -0.3em

  background: rgba(0,0,0,0.1)

  border-radius: 3px
  box-shadow: 0 0 0 1px rgba(0,0,0,.2)

.demo
  position: relative

  overflow: hidden

  margin-top: 1.5em
  margin-bottom: 1.5em
  box-sizing: border-box

.demo_injected
  text-align: left
  overflow: visible

.demo__frame
  display: block

  height: 26em
  padding: 0
  margin: 0
  border: 0

.demo__link
  position: absolute
  right: 0
  bottom: 0
  left: 0
  text-align: center

  text-shadow: none !important

  background: rgba(255,255,255,.5) !important

  border-radius: 4px 4px 0 0
  transition: bottom .2s

.demo:not(:hover) .demo__link
  bottom: -2em
  transition: bottom .2s 1s


.languages
  position: absolute
  bottom: 0.45em
  right: 0.6em
  padding: 0
  margin: 0
