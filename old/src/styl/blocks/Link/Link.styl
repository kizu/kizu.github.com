.Link
  &-Inner
    position: relative

  &_wrapper
    &:hover,
    &:focus
      background-repeat: no-repeat

      & ^[0]-Inner
        padding-top: inherit
        padding-bottom: inherit
        background: inherit
        background-repeat: repeat-x

    & .ico
      margin-top: -4px

      vertical-align: middle

  &_pseudo
    &,
    &^[0]_wrapper ^[0]-Inner
      text-decoration: none
      border-bottom: 1px dotted

    &^[0]_wrapper
      border-bottom: 0

  &_text
    color: inherit
