.Figure
  padding: .3em !important

  background: #FFF

  border-radius: 3px
  box-shadow: 0 0 0 1px rgba(0,0,0,.2)

  +at-lowest()
    &&
      width: calc(100% + 52px)
      max-width: none
      margin-left: -26px

  & a:hover,
  & a:focus
    text-decoration: underline
    text-shadow: none
    background-image: none
