add-font($name, $selector = null, $encoding = 'woff')
  @font-face
    font-family: $name
    font-weight: normal
    font-style: normal
    src: embedurl($name + '.' + $encoding) format($encoding)

  if $selector
    {$selector}
      font-family: $name, Georgia, serif
      font-style: normal
      font-weight: normal
